 <body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <ul class="cart__item-list">
            <% products.forEach(p => { %>
               <li>
                  <p>><%= p.productId.title %></p>
                  <h2>Quantity: <%= p.quantity %></h2>
               </li>
            <% }) %>
          </ul>
          <div>
            <h2 class="centered">Total Sum: $<%= totalSum %> </h2>
          </div>
          <div class="centered">
            <button id="order-btn" class="btn">Order Now</button>
            <script src="https://js.stripe.com/v3/"></script>
            <script>
               var stripe = Stripe('pk_test_51Ltw3QDi1kZU9WjYTVEiIzArfqw3e3JOFmL0L0L0bUOmXyPgcAJ1GT4Ip0y6bqrGEhdzUBz25Ymooz9LoZxTVtfI00mTPboIns');
               var orderBtn = document.getElementById('order-btn')
               orderBtn.addEventListener('click', function(){
                  stripe.redirectToCheckout({
                     sessionId: '<%= sessionId %>'
                  })
               })
            </script>
          </div>         
           
    </main>
